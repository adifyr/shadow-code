{
  "name": "shadow-code-ai",
  "displayName": "shadow-code-ai",
  "description": "AI-powered pseudo-code to code conversion engine.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Programming Languages",
    "AI"
  ],
  "activationEvents": [
    "workspaceContains:**/*.shadow"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shadowCodeAI.openInShadowMode",
        "title": "Open In Shadow Mode",
        "icon": "$(mirror)"
      },
      {
        "command": "shadowCodeAI.generateCode",
        "title": "Generate Code",
        "icon": "$(sparkle)"
      }
    ],
    "keybindings": [
      {
        "command": "shadowCodeAI.generateCode",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus && resourceExtname == .shadow"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "shadowCodeAI.openInShadowMode",
          "when": "resourceScheme == file",
          "group": "navigation"
        },
        {
          "command": "shadowCodeAI.generateCode",
          "when": "resourceExtname == .shadow",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "shadowCodeAI.openInShadowMode",
          "when": "resourceScheme == file",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Shadow Code AI",
      "properties": {
        "shadowCodeAI.geminiApiKey": {
          "type": "string",
          "title": "Gemini API Key",
          "default": "",
          "description": "Your Google Gemini API key.",
          "order": 1
        },
        "shadowCodeAI.modelName": {
          "type": "string",
          "title": "Gemini Model",
          "default": "gemini-flash-lite-latest",
          "enum": [
            "gemini-2.5-flash-lite"
          ],
          "enumDescriptions": [
            "Gemini's lightest, fastest model with decent output quality."
          ],
          "description": "The Gemini model to use for code generation.",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "diff": "^8.0.2"
  }
}