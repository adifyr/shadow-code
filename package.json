{
  "name": "shadow-code-ai",
  "displayName": "Shadow Code AI",
  "description": "A novel approach to coding with AI.",
  "icon": "assets/icon.png",
  "publisher": "adifyr",
  "version": "0.5.1",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Shadow Code requires a trusted workspace to function."
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adifyr/shadow-code.git"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Programming Languages",
    "AI"
  ],
  "activationEvents": [
    "workspaceContains:**/*.shadow"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "icons": {
      "shadow-mode": {
        "description": "Main Icon for enabling Shadow Mode.",
        "default": {
          "fontPath": "assets/shadow-icon.woff",
          "fontCharacter": "\\f000"
        }
      }
    },
    "commands": [
      {
        "command": "ShadowCode.openInShadowMode",
        "title": "Open In Shadow Mode",
        "icon": "$(shadow-mode)"
      },
      {
        "command": "ShadowCode.selectModel",
        "title": "Shadow Code: Select AI Model For Code Generation",
        "shortTitle": "Select Shadow Code AI Model"
      },
      {
        "command": "ShadowCode.copyCode",
        "title": "Copy Over Existing Code",
        "icon": "$(copy)"
      },
      {
        "command": "ShadowCode.convertShadowCode",
        "title": "Convert To Code",
        "icon": "$(sparkle)"
      }
    ],
    "languages": [
      {
        "id": "shadow",
        "aliases": [
          "Shadow"
        ],
        "extensions": [
          ".shadow"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "shadow",
        "scopeName": "source.shadow",
        "path": "./syntaxes/shadow.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "ShadowCode.convertShadowCode",
        "key": "ctrl+alt+enter",
        "mac": "cmd+alt+enter",
        "when": "resourceScheme == file && resourceExtname == .shadow"
      },
      {
        "command": "ShadowCode.openInShadowMode",
        "key": "ctrl+alt+s",
        "mac": "cmd+ctrl+s",
        "when": "resourceScheme == file && editorTextFocus && resourceExtname != .shadow"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ShadowCode.openInShadowMode",
          "when": "resourceScheme == file && resourceExtname != .shadow",
          "group": "navigation"
        },
        {
          "command": "ShadowCode.copyCode",
          "when": "resourceExtname == .shadow",
          "group": "navigation"
        },
        {
          "command": "ShadowCode.convertShadowCode",
          "when": "resourceExtname == .shadow",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "ShadowCode.openInShadowMode",
          "when": "resourceScheme == file && resourceExtname != .shadow",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Shadow Code",
      "properties": {
        "ShadowCode.modelId": {
          "type": "string",
          "title": "AI Model",
          "description": "The AI model to use for code generation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "diff": "^8.0.3",
    "js-yaml": "^4.1.1",
    "smol-toml": "^1.6.0"
  }
}
